{
  "compilerOptions": {
    // output options
    "noEmitOnError": true, // do not update .js files in case of TS errors
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true, // generate .map files
    "outDir": "dist",
    // input options
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    // allow usage of JS (not TS) modules
    "esModuleInterop": true,
    "allowJs": true,
    // decorators (some modules won't work w/o them)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // strict type checking
    "strict": true
  },
  // where take files for compilation from
  "include": ["src/**/*"]
}
