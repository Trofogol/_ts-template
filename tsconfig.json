{
  "compilerOptions": {
    // output options
    "noEmitOnError": true,  // do not update .js files in case of TS errors
    "module": "commonjs",
    "target": "es2021",
    "moduleResolution": "node",
    "sourceMap": true,  // generate .map files
    "outDir": "dist",
    // input options
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "allowJs": true,  // allow usage of JS (not TS) modules
  },
  "include": ["src/**/*"] // where take files for compilation from
}
